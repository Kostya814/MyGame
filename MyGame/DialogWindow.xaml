<Window x:Class="MyGame.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Name="dialogWin"
        Title="DialogWindow" Height="100" Width="200">
    <DockPanel 
        Height="auto"
        Width="Auto">
        <TextBlock 
            x:Name="Question" 
            Margin="0,10,0,0"
            Text=" sdasdasdokoxosad"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"></TextBlock>
        <Button
            DockPanel.Dock="Left"
            VerticalAlignment="Bottom"
            Margin="10,0,0,10"
            Height="15" 
            Width="50"
        ></Button>
        <Button 
            DockPanel.Dock="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,10,10"
            Width="50"
            Height="15"
        />
    </DockPanel>
</Window>
